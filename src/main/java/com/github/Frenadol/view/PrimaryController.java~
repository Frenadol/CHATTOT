package com.github.Frenadol.view;

import java.io.IOException;

import com.github.Frenadol.App;
import javafx.fxml.FXML;
import javafx.scene.control.Button;

public class PrimaryController {
    @FXML
    private Button registrarBoton; // Cambiado "registerButtom" a "registrarBoton"
    @FXML
    private Button iniciarBoton; // Cambiado "inicieButtom" a "iniciarBoton"

    /**
     * Cambia la vista a la pantalla de registro cuando se hace clic en el botón de registrar.
     *
     * @throws IOException si hay un problema cargando la vista de registro.
     */
    @FXML
    private void switchToRegister() throws IOException {
        App.setRoot("RegisterUser");
    }

    /**
     * Cambia la vista a la pantalla de inicio de sesión cuando se hace clic en el botón de iniciar sesión.
     *
     * @throws IOException si hay un problema cargando la vista de inicio de sesión.
     */
    @FXML
    private void switchToInicie() throws IOException {
        App.setRoot("InicieSession");
    }
}
